/*
 * at91-sama5d2_xpt_mpcie.dts - Device Tree file for SAMA5D2 Xaptum mPCIe OC
 *
 * DAB-Embedded, 2018
 */

/dts-v1/;

#include "sama5d2.dtsi"
#include "sama5d2-pinfunc.h"
#include <dt-bindings/mfd/atmel-flexcom.h>
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/pinctrl/at91.h>

/ {
	model = "Xaptum SAMA5D2 mPCIe OC";
	compatible = "xaptum,sama5d2-xpt-mpcie", "atmel,sama5d2", "atmel,sama5";

	chosen {
		stdout-path = "serial0:115200n8";
	};

	clocks {
		slow_xtal {
			clock-frequency = <32768>;
		};

		main_xtal {
			clock-frequency = <12000000>;
		};
	};

	ahb {
		usb0: gadget@00300000 {
			status = "okay";
		};

		usb1: ohci@00400000 {
			num-ports = <3>;
			status = "disabled";
		};

		usb2: ehci@00500000 {
			status = "disabled";
		};

		sdmmc0: sdio-host@a0000000 {
			bus-width = <8>;
			pinctrl-names = "default";
			pinctrl-0 = <&pinctrl_sdmmc0_default>;
			non-removable;
			max-frequency = <26000000>;
			mmc-hs200-1_8v;
			disable-wp;
			status = "okay";
		};

		apb {
			pmc: pmc@f0014000 {
				pmc_fast_restart {
					compatible = "atmel,sama5d2-pmc-fast-startup";
					#address-cells = <1>;
					#size-cells = <0>;

					atmel,wakeup-rtc-timer;

					wkpin: input@0 {
						reg = <0>;
					};
				};
			};

			spi1: spi@fc000000 {
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_spi1_default>;
				status = "okay";

				tpm_spi_slb9670@1{
					compatible = "infineon,slb9670";
					reg = <1>;	/* CS1 */
					pinctrl-names = "default";
					pinctrl-0 = <&pinctrl_tpm_default>;
					spi-max-frequency = <20000000>;
				};
			};

			uart1: serial@f8020000 {
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_uart1_default>;
				atmel,use-dma-rx;
				atmel,use-dma-tx;
				status = "okay";
			};

			pwm0: pwm@f802c000 {
				status = "disabled";
			};

			shdwc@f8048010 {
				atmel,shdwc-debouncer = <976>;
				atmel,wakeup-rtc-timer;

				input@0 {
					reg = <0>;
					atmel,wakeup-type = "low";
				};
			};

			watchdog@f8048040 {
				status = "okay";
			};

			pinctrl@fc038000 {
				pinctrl_key_gpio_default: key_gpio_default {
					pinmux = <PIN_PD13__GPIO>;
					bias-pull-up;
				};

				pinctrl_led_gpio_default: led_gpio_default {
					pinmux = <PIN_PD12__GPIO>;
					bias-pull-up;
				};

				pinctrl_sdmmc0_default: sdmmc0_default {
					cmd_data {
						pinmux = <PIN_PA1__SDMMC0_CMD>,
							 <PIN_PA2__SDMMC0_DAT0>,
							 <PIN_PA3__SDMMC0_DAT1>,
							 <PIN_PA4__SDMMC0_DAT2>,
							 <PIN_PA5__SDMMC0_DAT3>,
							 <PIN_PA6__SDMMC0_DAT4>,
							 <PIN_PA7__SDMMC0_DAT5>,
							 <PIN_PA8__SDMMC0_DAT6>,
							 <PIN_PA9__SDMMC0_DAT7>;
						bias-disable;
					};

					ck_cd_rstn_vddsel {
						pinmux = <PIN_PA0__SDMMC0_CK>,
							 <PIN_PA10__SDMMC0_RSTN>;
						bias-disable;
					};
				};

				pinctrl_spi1_default: spi1_default {
					pinmux = <PIN_PD25__SPI1_SPCK>,
						 <PIN_PD26__SPI1_MOSI>,
						 <PIN_PD27__SPI1_MISO>,
						 <PIN_PD28__SPI1_NPCS0>,
						 <PIN_PD29__SPI1_NPCS1>;
					bias-disable;
				};

				pinctrl_uart1_default: uart1_default {
					pinmux = <PIN_PD2__URXD1>,
						 <PIN_PD3__UTXD1>;
					bias-disable;
				};

				pinctrl_tpm_default: tmp_default {
					pinmux = <PIN_PD21__GPIO>,
						 <PIN_PD22__GPIO>,
						 <PIN_PD23__GPIO>;
					bias-disable;
				};

			};
		};
	};

	gpio_keys {
		compatible = "gpio-keys";

		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_key_gpio_default>;

		bp1 {
			label = "N_W_DISABLE";
			gpios = <&pioA 109 GPIO_ACTIVE_LOW>;
			linux,code = <0x104>;
			wakeup-source;
		};
	};

	leds {
		compatible = "gpio-leds";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_led_gpio_default>;
		status = "okay";

		w_disable {
			label = "W_DISABLE";
			gpios = <&pioA 108 GPIO_ACTIVE_LOW>;
			linux,default-trigger = "heartbeat";
		};
	};
};
